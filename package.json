{
  "name": "searchbox",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "serve": "npm run clean:index && ng serve local",
    "start": "ng serve",
    "build": "npm run clean:index && ng build remote --prod && cp dist/index.html index.html",
    "buildLocal": "npm run clean:index && ng build local --prod && cp dist/index.html index.html",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "transpile": "ngc",
    "package": "rollup -c",
    "clean:index": "cp src/index.html index.html && touch index.html",
    "minify": "uglifyjs dist/bundles/searchbox.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/searchbox.umd.min.js",
    "buildlib": "npm run transpile && npm run package && npm run minify"
  },
  "private": true,
  "dependencies": {
    "@angular/core": "^6.1.10",
    "@angular/pwa": "^0.8.5",
    "@angular/router": "^6.1.10",
    "@angular/service-worker": "^6.1.10",
    "ngx-advanced-searchbox": "0.2.1",
    "ngx-highlightjs": "^2.0.2",
    "npm": "^5.8.0",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "^6.1.10",
    "@angular/compiler-cli": "^6.1.10",
    "@angular/language-service": "^6.1.10",
    "codelyzer": "~4.5.0",
    "typescript": "~2.7.2",
    "@angular-devkit/build-angular": "~0.8.5"
  }
}
