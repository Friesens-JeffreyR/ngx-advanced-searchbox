{
  "name": "searchbox",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run clean:index && ng build --prod --app remote",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "transpile": "ngc",
    "package": "rollup -c",
    "clean:index": "cp src/index.html index.html && touch index.html",
    "minify": "uglifyjs dist/bundles/searchbox.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/searchbox.umd.min.js",
    "buildlib": "npm run transpile && npm run package && npm run minify"
  },
  "private": true,
  "dependencies": {
    "@angular/router": "5.2.6",
    "ngx-advanced-searchbox": "0.1.5",
    "ngx-highlightjs": "^1.4.1",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "^1.7.1",
    "@angular/compiler-cli": "^5.2.6",
    "@angular/language-service": "^5.2.6",
    "codelyzer": "~3.2.0",
    "typescript": "~2.6.1"
  }
}
